extends layout

block content

  h1 Categorie: #{categorie.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 items

    dl
      each item in categorie_items
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}

      else
        p This categorie has no items

      hr
    p
      a(href=categorie.url+'/delete') Delete Categorie
    p
      a(href=categorie.url+'/update') Update Categorie  

